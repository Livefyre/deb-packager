<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
  <!--
    This jelly script is used for per-project configuration.

    See global.jelly for a general discussion about jelly script.
  -->

  <!--
    Creates a text field that shows the value of the "name" property.
    When submitted, it will be passed to the corresponding constructor parameter.
  -->
  <f:entry title="Package Name" field="packageName">
    <f:textbox />
  </f:entry>

  <f:entry title="Version Format" field="versionFormat">
    <f:textbox name="versionFormat" />
  </f:entry>

  <f:entry title="Copy to Path">
    <f:repeatable name="copyToPaths" field="copyToPaths" minimum="1" noAddButton="false">
      <table width="100%">
        <f:entry>
          <span style="vertical-align: middle;">
            Include <f:textbox style="width:25%;" name="include"/>
            Exclude <f:textbox style="width:25%;" name="exclude"/>
            To <f:textbox style="width:25%;" name="to" />
            <input type="button" value="Delete Rule" class="repeatable-delete" style="margin-left: 1em; vertical-align:middle;"/>
          </span>
        </f:entry>
      </table>
    </f:repeatable>
  </f:entry>  

  <f:entry title="Dependencies" field="dependencies">
    <f:textbox />
  </f:entry>

  <f:entry title="Maintainer" field="maintainer">
    <f:textbox />
  </f:entry>

  <f:entry title="preinst script:" field="preinst">
    <f:textarea />
  </f:entry>

  <f:entry title="postinst script:" field="postinst">
    <f:textarea />
  </f:entry>

  <f:entry title="prerm script:" field="prerm">
    <f:textarea />
  </f:entry>

  <f:entry title="postrm script:" field="postrm">
    <f:textarea />
  </f:entry>
</j:jelly>
